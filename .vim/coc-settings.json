{
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ],
            "rootPatterns": [
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                    "formattingProvider": "fourmolu"
                }
            }
        }
    }
}
